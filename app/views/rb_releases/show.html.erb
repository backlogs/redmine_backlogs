<div class="contextual">
<%= link_to_if_authorized l(:button_edit),   {:controller => 'rb_releases', :action => 'edit',    :release_id => @release}, :class => 'icon icon-edit', :accesskey => accesskey(:edit) %>
<%= link_to_if_authorized l(:button_delete), {:controller => 'rb_releases', :action => 'destroy', :release_id => @release}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
<%= link_to l(:button_delete), {:controller => 'rb_releases', :action => 'destroy', :release_id => @release}, :confirm => l(:text_are_you_sure), :method => :post, :class => 'icon icon-del' %>
</div>

<h2><%= @release.name %></h2>

<p><b>Start date:</b> <%= @release.release_start_date || "no start date" %></p>
<p><b>End date:</b>   <%= @release.release_end_date   || "no end date"   %></p>

<% content_for :sidebar do %>
    <h3><%= l(:label_release) %></h3>
    <%= @release.name -%>
<% end %>

<% html_title(@release.name) -%>
