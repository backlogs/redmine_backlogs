<div class="box tabular">

<% rb_labelled_fields_for :release, @release do |f| %>
  <p>
    <%= f.text_field :name, :required => true %>
  </p>
  <p>
    <%= f.text_field :release_start_date, :required => true %>
    <%= calendar_for('release_release_start_date') %>
  </p>
  <p>
    <%= f.text_field :release_end_date, :required => true %>
    <%= calendar_for('release_release_end_date') %>
  </p>
  <p>
    <%= f.text_field :initial_story_points, :required => true %>
    <% if backlog_points %>
      (<%= l(:current_open_story_points) %> <%= backlog_points %>)
    <% end %>
  </p>
  <p>
    <%= f.select :sharing,
        @release.allowed_sharings.collect {|v| [
          format_sharing(v),
          v]} %>
  </p>
<% end %>
</div>
